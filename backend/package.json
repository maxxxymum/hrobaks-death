{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "dependencies": {
    "body-parser": "^2.0.1",
    "express": "^5.0.1",
    "redis": "^4.2.0",
    "socket.io": "^4.5.1"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput",
    "dev:node": "node --enable-source-maps --watch dist/index.js",
    "dev": "concurrently --kill-others --names TS,APP -c blue,green \"npm run dev:tsc\" \"npm run dev:node\""
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.8.2",
    "concurrently": "^9.0.1",
    "typescript": "^5.6.3"
  }
}
